html, body
	height 100%
	margin 0
	.preload *, .preload *::after, .preload *::before
		transition none !important


body
	background white
	padding 0
	cursor default
	height 100%
	min-height 100%

a
	color blue
	text-decoration none
	height 1.2em
	border-bottom .125em solid transparent
	easing(500)
a:hover, a.hover
	easing(0)
	color blue
	border-bottom-color blue

#cursors
	position fixed
	z-index 99999
	top 0
	left 0
	right 0
	bottom 0
	pointer-events none

// -------------------------------------------------------------------------

.page
	font_main()
	font_antialiased()
	nav
		position fixed
		// little hack to avoid :hover on nav/ul background
		width 0
		overflow visible
		white-space nowrap
		// --/
		z-index 2
		top 50px
		left 25px
		line-height 1.4em
		// column-count 2

		// -------------------------------------------------------------------------
		input.hamburger
			display none
		+media(mobile)
			header
				position fixed
				top 50px
				left 25px
				& a
					margin-left 0
			ul
				position fixed
				top 50px
				right 25px
				margin-top 2em
				text-align right

			input.hamburger
				&~ul
					display none
				&:checked~ul
					display block
				&:checked~label[for="hamburger"]
					transform rotate(90deg)
			label[for="hamburger"]
				easing(100)
				position fixed
				right 25px
				display block
				width 1.4em
				height 1.4em
				cursor pointer
				background-image url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' version='1.1' x='0px' y='0px' width='30px' height='30px' viewBox='0 0 30 30' enable-background='new 0 0 30 30' xml:space='preserve'><rect width='30' height='6'/><rect y='24' width='30' height='6'/><rect y='12' width='30' height='6'/></svg>")
				background-size contain
		// -------------------------------------------------------------------------
		header
			margin-bottom 1.4em
			a::before
				display none
		a
			easing(500)
			position relative
			margin-left 4em
			&::before
				easing(500)
				content attr(data-date)
				position absolute
				height 100%
				padding-right 1em
				right 100%
				color rgba(0,0,0,.4)
				border-bottom .125em solid transparent
			&:hover, &.hover
				easing(0)
				background rgba(255,255,255,.9)
				&::before
					easing(0)
					background rgba(255,255,255,.9)
					border-bottom .125em solid blue
	section
		z-index 1
		font-family 'Open Sans'
		font-weight bold
		font-size 8vw
		padding 50px
		padding-top 100vh
		margin-top -1.7em
		header
			margin-bottom 1em
			h1
				font-size 8vw
				font-weight bold
			aside
				margin-top .3em
				font-size 6vw
		p
			margin-bottom .4em

		.description, footer
			margin 0 auto
			max-width 600px
			line-height 1.3em
			font-size 20px
			margin-bottom 8vw
			p
				margin-bottom 1em
		footer
			text-align right
			margin-top 1em
			div:not(:last-child)
				margin-bottom 1em
		.gallery
			&.gallery-columns-2{column-count:2;}
			&.gallery-columns-3{column-count:3;}
			&.gallery-columns-4{column-count:4;}
			+media(mobile)
				&.gallery-columns-2,
				&.gallery-columns-3,
				&.gallery-columns-4{column-count:1;}
			column-gap 25px
			line-height 0
			img
				display block
				margin-bottom 25px
				width 100%
				height auto
				&:last-child
					margin-bottom 0
			.iframe-ratio
				margin-bottom 25px
				position relative
				width 100%
				height 0
				padding-bottom 51%
				iframe
					position: absolute
					width: 100%
					height: 100%
					left: 0
					top: 0


// -------------------------------------------------------------------------


.blazy
	opacity 0
	&.blazy-loaded
		easing(1000)
		opacity 1